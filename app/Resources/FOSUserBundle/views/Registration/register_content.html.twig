{% block css %}
    <link rel="stylesheet" href="{{ asset('css/registrar.css') }}" />
{% endblock css %}
<div class="row">
    <div class="panel panel-primary">
        <div class="panel-body">
            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}    
                <div class="form-group">
                    <h2>Criar nova Conta</h2>
                </div>
                <div class="form-group">
                    <label class="control-label" for="signupName">Usuário</label>
                    {{ form_widget(form.username) }}
                </div>
                <div class="form-group">
                    <label class="control-label" for="signupEmail">Email</label>
                    {{ form_widget(form.email) }}
                </div>
                <div class="form-group">
                    <label class="control-label" for="signupPassword">Senha</label>
                    {{ form_widget(form.plainPassword.first, {'attr': {'placeholder':'mínimo 6 caracteres'} }) }}
                </div>
                <div class="form-group">
                    <label class="control-label" for="signupPasswordagain">Repita a senha</label>
                    {{ form_widget(form.plainPassword.second) }}
                </div>
                <div class="form-group">
                    <button id="signupSubmit" type="submit" class="btn btn-info btn-block">Crie sua conta</button>
                </div>
                <hr>
                <p></p>Já possui uma conta? <a href="#">Logar</a></p>
            {{ form_end(form) }}
        </div>
    </div>
</div>